<header class="[ intro ] [ pad-top-700 pad-bottom-500 ]">

  <div class="[ inner-wrapper ] [ sf-flow ]">
    <h1 class="[ text-800 md:text-900 leading-tight ] [ p-name ]">{{ introHeading }}</h1>
    {% if isHome %}
      <h2 class="[ ta-center ]"> It is <span id="currentDateArea"></span>.</h2>
    {% endif %}
    {% if introSummary %}
      <div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ]">{{ introSummary | safe }}</div>
    {% endif %}

  </div>
</header>
